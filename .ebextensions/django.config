container_commands:
  01_migrate:
    command: "source $PYTHONPATH/activate && python var/app/current/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source $PYTHONPATH/activate && python var/app/current/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source $PYTHONPATH/activate && python var/app/current/manage.py collectstatic --noinput"

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "Project4U.settings"
  aws:elasticbeanstalk:container:python:
    WSGIPath: Project4U.wsgi:application
    NumProcesses: 3
    NumThreads: 20
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
